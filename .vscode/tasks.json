    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "0_test.c",
                "-o",
                "main.exe"
            ],
            "group": "build"
        },
        {
            "label": "Comiple Debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "0_test.c",
                "-o",
                "main.exe"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./main.exe",
            "group": "build",
            "problemMatcher": []
        }
    ]
}